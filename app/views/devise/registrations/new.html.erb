<div class="col-md-6 col-md-offset-3">
  <div class="jumbotron">
    <div class="container">
      <hr>
      <h2 class="font-fira-m text-center">
        Create Account
      </h2>
      <hr>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.email_field :email, class: "font-fira form-control text-center", placeholder: 'Enter your email' %>
        </div>

        <div class="form-group">
          <%= f.text_field :first_name, class: "font-fira form-control text-center", placeholder: 'First Name' %>
        </div>

        <div class="form-group">
          <%= f.text_field :last_name, class: "font-fira form-control text-center", placeholder: 'Last Name' %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", class: "font-fira form-control text-center", placeholder: "Password (#{@minimum_password_length} characters minimum)" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "font-fira form-control text-center", placeholder: 'Password Confirmation' %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: 'btn btn-default form-control font-fira' %>
        </div>
      <% end %><br/>

      <center>
        <h6>
          <%= link_to 'Login', new_user_session_path, class: 'font-fira-l'%><br><br>
          <%= link_to 'Having Trouble', trouble_page_path, class: 'font-fira-l'%>
        </h6>
      </center>
      <hr>
    </div>
  </div>
</div>
