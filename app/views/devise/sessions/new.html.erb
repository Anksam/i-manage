<div class="col-md-6 col-md-offset-3">
  <div class="jumbotron">
    <div class="container">
      <hr>
      <h2 class="font-fira-m text-center">
        Log in <hr>
      </h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, class: "font-fira form-control text-center", placeholder: 'Enter your email' %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, class: "font-fira form-control text-center", placeholder: 'Enter your password' %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <center>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: 'font-fira-m' %>
            </center>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", class: 'btn btn-default form-control font-fira' %>
        </div>
      <% end %>
      <br/>

      <center>
        <h6>
          <%= link_to 'Create New Account', new_user_registration_path, class: 'font-fira-l'%><br><br>
          <%= link_to 'Having Trouble', trouble_page_path, class: 'font-fira-l'%>
        </h6>
      </center>
      <hr>

    </div>
  </div>
</div>
