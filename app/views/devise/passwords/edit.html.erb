<div class="col-md-6 col-md-offset-3">
  <div class="jumbotron">
    <div class="container">
      <hr>
      <h2 class="font-fira-m text-center">
        Chnae your password
      </h2>
      <hr>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "font-fira form-control text-center", placeholder: "New Password (#{@minimum_password_length}) characters minimum" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "font-fira form-control text-center", placeholder: 'Confirm New Password' %>
        </div>

        <div class="actions">
          <%= f.submit "Change my password", class: 'btn btn-default form-control font-fira' %>
        </div>
      <% end %><br/>

      <center>
        <h6>
          <%= link_to 'Back to Login', new_user_session_path, class: 'font-fira-l'%><br><br>
        </h6>
      </center><hr>

    </div>
  </div>
</div>
