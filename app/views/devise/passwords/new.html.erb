<div class="col-md-6 col-md-offset-3">
  <div class="jumbotron">
    <div class="container">
      <hr>
      <h2 class="font-fira-m text-center">
        Forgot your password?
      </h2>
      <hr>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.email_field :email, autofocus: true, class: "font-fira form-control text-center", placeholder: 'Enter your email' %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: 'btn btn-default form-control font-fira' %>
        </div>
      <% end %><br/>

      <center>
        <h6>
          <%= link_to 'Back to Login', new_user_session_path, class: 'font-fira-l'%><br><br>
        </h6>
      </center><hr>

    </div>
  </div>
</div>
