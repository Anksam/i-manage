<% if @expense_categories.present? %>
  <hr>
  <h3 class="font-fira-m">Expense Categories</h3>
  <hr>

  <table class="table table-hover">
    <thead>
      <tr class="font-fira-m">
        <th class="text-center">Category name</th>
        <th class="text-center">Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @expense_categories.each do |expense_category| %>
        <tr class="font-fira text-center">
          <td><b><%= expense_category.category_name %><b></td>
          <td><%= truncate(expense_category.description, length:80) %>....</td>
          <td><%= link_to 'Show', expense_category %></td>
          <td><%= link_to 'Edit', edit_expense_category_path(expense_category) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Add New Expense Category', new_expense_category_path, class: 'btn btn-default form-control' %>
<% else %>
  <%= render 'expense_categories/details' %>
<% end %>
